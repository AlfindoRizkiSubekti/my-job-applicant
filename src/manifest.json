{
  "manifest_version": 3,
  "name": "JobStreet Tracker",
  "version": "1.0",
  "description": "Track and save your JobStreet applications locally.",
  "permissions": ["storage", "scripting", "tabs"],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.jobstreet.co.id/*"],
      "js": ["content/content-script.js"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  }
}
