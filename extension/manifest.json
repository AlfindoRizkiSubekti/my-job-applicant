{
  "manifest_version": 3,
  "name": "Job Application Auto Tracker",
  "version": "1.0",
  "description": "Automatically track job applications from Jobstreet Indonesia",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://id.jobstreet.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://id.jobstreet.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Job Application Tracker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  }
}